{
  "compilerOptions": {
    "target": "esnext",                     // or "es5" if you need broader compatibility
    "module": "esnext",                     // or "commonjs"
    "jsx": "react-jsx",                     // Use "react-jsx" for React 17+ or "react" for older versions
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "moduleResolution": "node"
  },
  "include": ["src", "vite.config.ts"] // Ensure your source files are included
}
